{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "QUANT Scraping Stack",
  "Parameters": {
    "ScheduledScrapeArgs": {
        "Type": "CommaDelimitedList",
        "Default": "",
        "Description": "Container overrides to specify the default scheduled scraping parameters."
    }
  },
  "Resources": {
    "WebsiteBucket": {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
          "AccessControl": "PublicRead",
          "BucketName" : "uoy-researchit-website-dev",
          "Tags" : [ 
              {
                  "Key": "description",
                  "Value": "Hosts content for the Research IT website"
              },
              {
                  "Key": "name",
                  "Value": "research-it-website-bucket"
              }
          ],
          "WebsiteConfiguration" : {
              "ErrorDocument" : "index.html",
              "IndexDocument" : "404.html"
            }
        }
    }
  },
  "Outputs": {
          "WebsiteURL": {
              "Value": {
                  "Fn::GetAtt": [
                      "WebsiteBucket",
                      "WebsiteURL"
                  ]
              },
              "Description": "URL for website hosted on S3"
          },
          "WebsiteBucketSecureURL": {
              "Value": {
                  "Fn::Join": [
                      "",
                      [
                          "https://",
                          {
                              "Fn::GetAtt": [
                                  "WebsiteBucket",
                                  "DomainName"
                              ]
                          }
                      ]
                  ]
              },
              "Description": "Name of S3 bucket to hold website content"
          }
      }
}
